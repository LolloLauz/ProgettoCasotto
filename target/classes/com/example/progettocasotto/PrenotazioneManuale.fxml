   <children>
      <DatePicker fx:id="dataInizioPrenotazione" layoutX="26.0" layoutY="92.0" promptText="Data inizio prenotazione" />
      <DatePicker fx:id="dataFinePrenotazione" layoutX="26.0" layoutY="142.0" promptText="Data fine prenotazione" />
