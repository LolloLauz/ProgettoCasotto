<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: lightsteelblue;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettocasotto.OrdinazioneBarView">
   <children>
      <Label style="-fx-font-weight: bold;" text="ORDINAZIONE DAL BAR" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER" spacing="70.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="bevanda" alignment="CENTER" promptText="nome bevanda" />
                  <TextField fx:id="bevandaQuantita" alignment="CENTER" promptText="quantita" />
                  <Button fx:id="aggiungiAllOrdine" mnemonicParsing="false" onAction="#handleAggiungiAllOrdine" prefWidth="150.0" style="-fx-font-weight: bold;" text="AGGIUNGI ALL'ORDINE" />
                  <ComboBox fx:id="qrCode" prefWidth="150.0" />
                  <Button fx:id="cpnfermaOrdinazione" mnemonicParsing="false" onAction="#handleConfermaOrdinazione" style="-fx-font-weight: bold;" text="CONFERMA ORDINAZIONE" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label contentDisplay="CENTER" style="-fx-font-weight: bold;" text="MENU" textAlignment="CENTER" />
                  <Label fx:id="menu" alignment="CENTER" contentDisplay="CENTER" style="-fx-border-color: black; -fx-border-radius: 5; -fx-font-weight: bold; -fx-border-style: dashed; -fx-font-style: italic;" textAlignment="CENTER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
