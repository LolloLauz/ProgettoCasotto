<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: lightsteelblue;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettocasotto.AggiungiOmbrelloniView">
   <children>
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <Label style="-fx-font-weight: bold;" text="AGGIUNGI OMBRELLONI" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox spacing="20.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="ombrelloneSelezionato" alignment="CENTER" />
                        <Button fx:id="aggiugniOmbrellone" mnemonicParsing="false" onAction="#handleAggiungiOmbrellone" style="-fx-font-weight: bold;" text="AGGIUNGI OMBRELLONE" textAlignment="CENTER" />
                        <Button fx:id="confermaLeModifiche" mnemonicParsing="false" onAction="#handleCOnfermaLeModifiche" style="-fx-font-weight: bold;" text="CONFERMA LE MODIFICHE" textAlignment="CENTER" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <TextArea fx:id="ombrelloniDisponibii" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
