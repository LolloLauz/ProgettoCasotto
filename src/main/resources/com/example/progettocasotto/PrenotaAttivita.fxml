<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="60.0" style="-fx-background-color: lightsteelblue;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettocasotto.PrenotaAttivitaView">
   <children>
      <Label style="-fx-font-weight: bold;" text="PRENOTA ATTIVITA'" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <ComboBox fx:id="idAttivita" prefWidth="200.0" promptText="SCEGLI ATTIVITA'" style="-fx-font-weight: bold;" />
                  <TextField fx:id="numeroPersone" alignment="CENTER" prefWidth="200.0" promptText="numero persone" style="-fx-font-weight: bold;" />
                  <Button fx:id="prenota" alignment="CENTER" mnemonicParsing="false" onAction="#handlePrenota" prefWidth="200.0" style="-fx-font-weight: bold;" text="PRENOTA" textAlignment="CENTER" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <TextArea fx:id="mostraAttivita" prefWidth="300.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
